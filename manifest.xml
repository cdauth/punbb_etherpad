<?xml version="1.0"?>
<extension engine="1.0">
	<id>ethercalc</id>
	<title>Ethercalc</title>
	<version>0.1.2</version>
	<description>Embed editable Ethercalc spreadsheets in posts.</description>
	<author>Candid Dauth</author>
	<minversion>1.4</minversion>
	<maxtestedon>1.4.4</maxtestedon>
	
	<install><![CDATA[
		$forum_db->query_build(array("INSERT" => "conf_name, conf_value", "INTO" => "config", "VALUES" => "'o_ethercalc_url', ''"));
		$forum_db->query_build(array("INSERT" => "conf_name, conf_value", "INTO" => "config", "VALUES" => "'o_ethercalc_prefix', ''"));
	]]></install>
	<uninstall><![CDATA[
		$forum_db->query_build(array("DELETE" => "config", "WHERE" => "conf_name = 'o_ethercalc_url' OR conf_name = 'o_ethercalc_prefix'"));
	]]></uninstall>
	<hooks>
		<hook id="he_new_bbcode_section"><![CDATA[
			require($ext_info['path']."/bbcode_help.php");
		]]>
		</hook>
		<hook id="ps_preparse_tags_start"><![CDATA[
			require_once($ext_info['path']."/common.php");

			$tags[] = ETHERCALC_TAG;
			$tags_block[] = ETHERCALC_TAG;
		]]>
		</hook>
		<hook id="ps_preparse_tags_end"><![CDATA[
			require_once($ext_info['path']."/common.php");
			
			$new_text = ethercalc_add_random_ids($new_text);
		]]>
		</hook>
		<hook id="ps_do_bbcode_replace"><![CDATA[
			require_once($ext_info['path']."/common.php");

			if($forum_config['o_ethercalc_url'])
			{
				if(!isset($pattern_callback))
					list($pattern_callback, $replace_callback) = array(array(), array());

				$pattern_callback[] = "/\\[".preg_quote(ETHERCALC_TAG, "/")."=(.*?)\\]/";
				$replace_callback[] = "'<iframe src=\"'.htmlspecialchars(ethercalc_make_url(\$matches[1])).'\" class=\"ethercalc\"></iframe>'";
			}
		]]>
		</hook>
		<hook id="aop_features_gzip_fieldset_end"><![CDATA[
			require_once($ext_info['path']."/admin_setting.php");
		]]>
		</hook>
		<hook id="hd_head"><![CDATA[
			$forum_loader->add_css($ext_info['url']."/style.css");
		]]>
		</hook>
		<hook id="pun_bbcode_pre_buttons_output"><![CDATA[
			require_once($ext_info['path']."/common.php");

			$this->add_button(array('name' => ETHERCALC_TAG, 'weight' => 61, 'image' => true, 'onclick' => 'PUNBB.pun_bbcode.insert_text(\'['.ETHERCALC_TAG.']\n\', \'\')'));
		]]>
		</hook>
	</hooks>
</extension>
